<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= link_to "Back", players_dashboard_index_path %> |
<br>
<br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "players/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %>: <%= resource.email %><br />
  </div>

  <div class="field">
    <%= f.label :full_name %><br />
    <%= f.text_field :full_name %>
  </div>

  <div class="field">
    <%= f.label :position %><br />
    <%= f.select :position, Player::POSITIONS %>
  </div>

  <div class="field">
    <%= f.label :is_available %> <br />
    <%= f.check_box :is_available %> <br />
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>